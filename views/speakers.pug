extends layout

mixin room (roomId)
	case roomId
		when "1"
			span.Ballroom.A
				i.fa.fa-map-marker(style="color:#babfcc;" aria-hidden="true") 
				span &nbsp;Ballroom A
		when "2"
			span.Ballroom.B
				i.fa.fa-map-marker(style="color:#babfcc;" aria-hidden="true") 
				span &nbsp;Ballroom B
		when "3"
			span.Ballroom.C
				i.fa.fa-map-marker(style="color:#babfcc;" aria-hidden="true")
				span &nbsp;Ballroom C
		default
			span.roomId
				i.fa.fa-map-marker(style="color:#babfcc;" aria-hidden="true")
				span &nbsp;#{roomId}

mixin Day (fullDay)
	case fullDay
		when 1
			span.Thursday
				span(style="padding-right: 10px;") Thursday, Oct. 5
		when 2
			span.Friday
				span(style="padding-right: 10px;") Friday, Oct. 6
		default
			span &nbsp;#{fullDay}

