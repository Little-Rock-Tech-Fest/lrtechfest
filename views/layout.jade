		section#sign_up.section.bg-cover.bg4.light-text.align-center
			.container
				h2
					span.highlight Get Notified
				small Get news about the event and get notified when registration opens up.
				.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
					//- <!-- Begin MailChimp Signup Form -->
					link(href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css")
					#mc_embed_signup
					form(action="//lrtechfest.us10.list-manage.com/subscribe/post?u=7f81e7471c2c58788b0939cda&amp;id=a8af54325e" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate)
						#mc_embed_signup_scroll
							#mce-responses.clear
								.response#mce-error-response(style="display:none")
								.response#mce-success-response(style="display:none")
							div(style="position: absolute; left: -5000px;" aria-hidden="true")
								input(type="text" name="b_7f81e7471c2c58788b0939cda_a8af54325e" tabindex="-1" value="")
							fieldset.col-sm-8.mc-field-group
								input#mce-EMAIL.required.email.NewsletterEmail(name="EMAIL" type="email" placeholder="email@email.com")
							fieldset.col-sm-4
								//- input.btn.btn-sm.btn-outline-clr(type="submit" value="submit")
								input.btn.btn-sm.btn-outline-clr(type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe")
								

		section#sponsors.section.align-center
			.container
				span.icon.section-icon.icon-documents-bookmarks-12
				h3 Sponsors
				p We are currently seeking sponsors for 2016. To see your logo here, please <a href="mailto:sponsors@lrtechfest.com?Subject=TechFest">contact us</a>!
				br
				br
				
				//- h4 Platinum
				.sponsors
				each sponsor in sponsors
					if sponsor.Level == "Platinum"
						.sponsor.big
							a(href="#{sponsor.Website}" target="_blank")
								img(src="#{sponsor.Logo}" alt="#{sponsor.Name}")
				
				.sponsors
				each sponsor in sponsors
					if sponsor.Level == "Gold" || sponsor.Level == "Silver"
						.sponsor.inline
							a(href="#{sponsor.Website}" target="_blank")
								img(src="#{sponsor.Logo}" alt="#{sponsor.Name}")
							
				h4 Bronze
				.sponsors
				each sponsor in sponsors
					if sponsor.Level == "Bronze"
						.sponsor.inline.small
							a(href="#{sponsor.Website}" target="_blank")
								img(src="#{sponsor.Logo}" alt="#{sponsor.Name}")


