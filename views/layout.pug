	body

		block hero

		header.header.header-black
			.header-wrapper
				.container
					.col-sm-2.col-xs-12.navigation-header
						a.logo(href="/")
							img(src="/img/lrtf-logo-small.png" style="height:80px;margin-top: -24px;" alt="LRTF Logo")
						button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#navigation" aria-expanded="false" aria-controls="navigation")
							span.icon-bar
							span.icon-bar
							span.icon-bar
					.col-sm-10.col-xs-12.navigation-container
						#navigation.navbar-collapse.collapse
							ul.navigation-list.pull-left.light-text
								li.navigation-item.dropdown
									a.navigation-link(href="/#speakers") Speakers
									ul.dropdown-menu
										li.navigation-item
											a.navigation-link(href="/schedule") Schedule
								li.navigation-item
									a.navigation-link(href="/#sponsors") Sponsors
								li.navigation-item
									a.navigation-link(href="/#gallery") Gallery									
								li.navigation-item
									a.navigation-link(href="/#location") Location
								li.navigation-item
									a.navigation-link(href="/event") Event
								li.navigation-item
									a.navigation-link(href="/jobs") Jobs
								//-li.navigation-item.dropdown
									a.navigation-link(href="/pastyear") Past Events
									ul.dropdown-menu
										li.navigation-item
											a.navigation-link(href="/pastyear/2017") 2017
										li.navigation-item
											a.navigation-link(href="/pastyear/2016") 2016
										li.navigation-item
											a.navigation-link(href="/pastyear/2015") 2015
										li.navigation-item
											a.navigation-link(href="/pastyear/2014") 2014

							a.pull-right.buy-btn(href="/#tickets") Buy Tickets


		block content


		section.footer
			.footer-base
				.container
					.col-md-2
						a(href="http://www.techtober.com/about/" target="new")
							img(src="/img/TECHTOBER_supporter.png" alt="Proud Supporter of Techtober" class="endorsement")
					.col-md-6
						ul.footer-nav
							li.footer-nav-item
								a(href="mailto:info@lrtechfest.com") Contact
							li.footer-nav-item
								a(href="http://confcodeofconduct.com/" target="new") Code of Conduct
							li.footer-nav-item
								a(href='http://usergroup.tv/videos/category/group/little-rock-tech-fest' target="new") Speaker Videos
							li.footer-nav-item
								a(href="/pastyear") Past Events
					.col-md-4.align-right
						ul.socials-nav.align-right
							li.socials-nav-item
								a(href="https://twitter.com/LRTechFest" target="new")
									span.fa.fa-twitter
							li.socials-nav-item
								a(href="https://www.facebook.com/LittleRockTechFest" target="new")
									span.fa.fa-facebook
							li.socials-nav-item
								a(href="mailto:info@lrtechfest.com?Subject=TechFest")
									span.fa.fa-envelope
						p.text-alt
							small All Rights Reserved © #{moment().format('YYYY')}&nbsp;

