doctype html
html
	head
		meta(charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
		title Little Rock Tech Fest 2016
		//- link(href="http://fonts.googleapis.com/css?family=Roboto:100,300,700", rel='stylesheet', type='text/css')
		//- link(href='http://fonts.googleapis.com/css?family=Ubuntu:700' rel='stylesheet' type='text/css')
		link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css", rel="stylesheet")
		link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", rel="stylesheet")
		link(link href="//cdn-images.mailchimp.com/embedcode/slim-081711.css" rel="stylesheet" type="text/css")
		block stylesheets
		link(href="/public/css/animations.css", rel="stylesheet")
		link(href="/public/css/style.css", rel="stylesheet")
		link(href="/public/css/style-green-color.css", rel="stylesheet")
		link(href="/public/css/custom.css", rel="stylesheet")
		script(src="/public/js/google-analytics.js")
	body
		.preloader-mask
			.preloader
		section#hero.hero-section.bg1.window-height.light-text
			.video-bg
				video#home-video(autoplay loop)
					source(src="/public/video/main.mp4" type="video/mp4")
					source(src="/public/video/main.webm" type="video/webm")
			ul.socials-nav
				li.socials-nav-item
					a(href="https://twitter.com/LRTechFest" target="_blank")
						span.fa.fa-twitter
				li.socials-nav-item
					a(href="https://www.facebook.com/LittleRockTechFest" target="_blank")
						span.fa.fa-facebook
				li.socials-nav-item
					a(href="mailto:info@lrtechfest.com?Subject=TechFest")
						span.fa.fa-envelope
			.heading-block.centered-block.align-center
				.container
					h5.heading-alt(style="margin-bottom: 8px;")
						span.fa.fa-calendar-o.base-clr-txt 
						span October 20-21, 2016
						span.fa.fa-map-marker.base-clr-txt 
						span Little Rock, AR
					h1.extra-heading Little Rock Tech Fest
					h6.thin.base-font Two days of learning, networking, and fun for web and software developers
					.btns-container
						a(class="btn btn-primary btn-md" href="https://www.papercall.io/lrtf" target="_blank") Call for Speakers
		header.header.header-black
			.header-wrapper
				.container
					.col-sm-2.col-xs-12.navigation-header
						a.logo(href="/")
							img(src="/public/img/lrtf-logo-small.png" style="height:80px;margin-top: -24px;")
						button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#navigation" aria-expanded="false" aria-controls="navigation")
							span(class="icon-bar")
							span(class="icon-bar")
							span(class="icon-bar")
					.col-sm-10.col-xs-12.navigation-container
						#navigation.navbar-collapse.collapse
							ul.navigation-list.pull-left.light-text
								li.navigation-item
									a(class="navigation-link" href="https://www.papercall.io/lrtf" target="_blank") Call for Speakers
								li.navigation-item.dropdown
									a.navigation-link.dropdown-toggle(href="/#sponsors") Sponsors
									ul.dropdown-menu
										li.navigation-item
											a(class="navigation-link" href="/sponsors") Become a sponsor
								//- li.navigation-item
								//- 	a(class="navigation-link" href="#speakers") Schedule
							//- a(class="pull-right buy-btn" href="#") Buy Tickets	

		section#about.section.align-center
			.container
				.icon.section-icon.icon-multimedia-12
				h3 You want to be at #LRTF 2016
				p.text-alt There are exciting changes in store! This year we are unveiling a two-day format,<br class="hidden-sm hidden-xs"/> hosted on October 20-21 at the Statehouse Convention Center in Little Rock, Arkansas.

	
		section#sign_up.section.bg-cover.bg4.light-text.align-center
			.container
				h2
					span.highlight Get Notified
				small Get news about the event and get notified when registration opens up.
				.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2
					//- <!-- Begin MailChimp Signup Form -->
					link(href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css")
					#mc_embed_signup
					form(action="//lrtechfest.us10.list-manage.com/subscribe/post?u=7f81e7471c2c58788b0939cda&amp;id=a8af54325e" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate)
						#mc_embed_signup_scroll
							#mce-responses.clear
								.response#mce-error-response(style="display:none")
								.response#mce-success-response(style="display:none")
							div(style="position: absolute; left: -5000px;" aria-hidden="true")
								input(type="text" name="b_7f81e7471c2c58788b0939cda_a8af54325e" tabindex="-1" value="")
							fieldset.col-sm-8.mc-field-group
								input#mce-EMAIL.required.email.NewsletterEmail(name="EMAIL" type="email" placeholder="email@email.com")
							fieldset.col-sm-4
								//- input.btn.btn-sm.btn-outline-clr(type="submit" value="submit")
								input.btn.btn-sm.btn-outline-clr(type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe")
								

		section#sponsors.section.align-center
			.container
				span.icon.section-icon.icon-documents-bookmarks-12
				h3 Sponsors
				p These are the organizations that help us make this event possible. <a href="/sponsors">Want to see your logo here?</a>
				br
				br
				
				//- h4 Platinum
				.sponsors
				each sponsor in sponsors
					if sponsor.Level == "Platinum"
						.sponsor.big
							a(href="#{sponsor.Website}" target="_blank")
								img(src="#{sponsor.Logo}" alt="#{sponsor.Name}")
				
				h5.heading-alt Gold
				.sponsors
				each sponsor in sponsors
					if sponsor.Level == "Gold"
						.sponsor.inline
							a(href="#{sponsor.Website}" target="_blank")
								img(src="#{sponsor.Logo}" alt="#{sponsor.Name}")
								
				h5.heading-alt Silver
				.sponsors
				each sponsor in sponsors
					if sponsor.Level == "Silver"
						.sponsor.inline
							a(href="#{sponsor.Website}" target="_blank")
								img(src="#{sponsor.Logo}" alt="#{sponsor.Name}")
							
				h5.heading-alt Bronze
				.sponsors
				each sponsor in sponsors
					if sponsor.Level == "Bronze"
						.sponsor.inline.small
							a(href="#{sponsor.Website}" target="_blank")
								img(src="#{sponsor.Logo}" alt="#{sponsor.Name}")


		.maincontent
			block content


		section.section.align-center
			.container
				h5 LRTF brought to you with <i class="fa fa-heart"></i> by
				.speakers.masonry
					each member in team
						.speaker.masonry-item
							.speaker-top
								.photo-wrapper
									img.img-responsive(src="#{member.imgUrl}")
								.speaker-title
									h3.name #{member.name}
									p.text-alt <small> #{member.title} @ #{member.company} </small>
								ul.speaker-socials
									if member.twitter 
										li
											a(href="http://twitter.com/#{member.twitter}" target="_blank")
												span.fa.fa-twitter
									else 
										li &nbsp;
										
									if member.linkedin
										li
											a(href="http://linkedin.com/in/#{member.linkedin}" target="_blank") 
												span.fa.fa-linkedin
									else
										li &nbsp;
										
									if member.github
										li
											a(href="http://github.com/#{member.github}" target="_blank")
												span.fa.fa-github
									else
										li &nbsp;

		section.footer
			.footer-base
				.container
					.col-md-6
						ul.footer-nav
							li.footer-nav-item
								a(href="mailto:info@lrtechfest.com") Contact
							//- li.footer-nav-item
							//- 	a(href="#") Privacy policy
							//- li.footer-nav-item
							//- 	a(href="#") Press
					.col-md-6.align-right
						ul.socials-nav.align-right
							li.socials-nav-item
								a(href="https://twitter.com/LRTechFest" target="_blank")
									span.fa.fa-twitter
							li.socials-nav-item
								a(href="https://www.facebook.com/LittleRockTechFest" target="_blank")
									span.fa.fa-facebook
							li.socials-nav-item
								a(href="mailto:info@lrtechfest.com?Subject=TechFest")
									span.fa.fa-envelope
						p.text-alt
							small All Rights Reserved © 2016&nbsp;
	
		script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
		script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js")
		block scripts
		script(type="text/javascript" src="/public/js/masonry.pkgd.min.js")
		script(src="/public/js/theme.js")
		script(src="/public/js/site.js")
