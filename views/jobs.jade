extends layout

block content
	section.align-center
		h1 Jobs

	section#jobs.fullwidth-section
		table.job-table.col-sm-8.col-sm-offset-2
			tbody
				each job in jobs
					tr.job-row
						td
							a(href="/jobDesc" class="job-anchor")
								img.col-sm-2.logo(style="max-height: 86px; width: auto;" src="#{job.logo}", alt="Logo")
								div.col-sm-10.job-wrap
									div.col-sm-12
										h6.col-sm-9.job-content #{job.shortDesc}
										p.col-sm-3.job-content(style="text-align: right;") #{job.type}
									div.col-sm-12
										p.col-sm-9.job-content #{job.compName}
										p(style="text-align: right;").col-sm-3.job-content<i class="fa fa-map-marker" aria-hidden="true">	#{job.location}</i>
				
	hr